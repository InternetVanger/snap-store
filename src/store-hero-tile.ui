<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="StoreHeroTile" parent="GtkEventBox">
    <signal name="button_release_event" handler="button_release_event_cb" object="StoreHeroTile" swapped="yes"/>
    <style>
    <class name="hero-tile"/>
    </style>
    <child>
      <object class="GtkBox">
        <property name="visible">True</property>
        <property name="orientation">horizontal</property>
        <property name="margin">30</property>
        <property name="spacing">30</property>
        <child>
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="orientation">vertical</property>
            <property name="hexpand">True</property>
            <property name="valign">center</property>
            <property name="spacing">20</property>
            <child>
              <object class="GtkLabel" id="title_label">
                <property name="visible">True</property>
                <property name="halign">start</property>
                <property name="ellipsize">end</property>
                <style>
                  <class name="hero-title-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="summary_label">
                <property name="visible">True</property>
                <property name="halign">start</property>
                <property name="ellipsize">end</property>
                <style>
                  <class name="hero-summary-label"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="StoreImage" id="icon_image">
            <property name="visible">True</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
